    /* Add CSS to style the table */
    #product-list tr:nth-child(even) {
      background-color: #f2f2f2;
      /* Light grey background for even rows */
    }

    #product-list tr:nth-child(odd) {
      background-color: #ffffff;
      /* White background for odd rows */

    <script>
      let originalCategoryData = {}; // To store the original data

      document.getElementById('saveCategoryButton').addEventListener('click', editCategory);

      function populateCategoryModal(category) {
        document.getElementById('categoryTitle').value = category.title;
        document.getElementById('categoryDescription').value = category.description;
        document.getElementById('productStatus').value = category.status;
        const categoryImage = category.image ? `/uploads/${category.image}` : '#';
        document.getElementById('modalCategoryImage').src = categoryImage;
        document.getElementById('modalCategoryImage').style.display = category.image ? 'block' : 'none';

        // Store original data
        originalCategoryData = {
          title: category.title,
          description: category.description,
          status: category.isListed,
          image: category.image
        };

        document.getElementById('editCategoryForm').dataset.categoryId = category._id;

        // Show the modal
        new bootstrap.Modal(document.getElementById('editCategoryModal')).show();
      }

      function hasChanges() {
        const form = document.getElementById('editCategoryForm');
        const currentTitle = form.querySelector('#categoryTitle').value;
        const currentDescription = form.querySelector('#categoryDescription').value;
        const currentStatus = form.querySelector('#productStatus').value;
        const currentImage = document.getElementById('modalInputCategoryImage').files.length > 0 ? 'changed' : originalCategoryData.image;

        return originalCategoryData.title !== currentTitle ||
          originalCategoryData.description !== currentDescription ||
          originalCategoryData.status !== currentStatus ||
          currentImage !== originalCategoryData.image;
      }

      function editCategory() {
        if (!hasChanges()) {
          Swal.fire({
            title: 'No Changes Detected',
            text: 'No changes were made to the category.',
            icon: 'info',
            confirmButtonText: 'OK'
          });
          return;
        }

        const form = document.getElementById('editCategoryForm');
        const categoryId = form.dataset.categoryId;
        const formData = new FormData(form);

        fetch(`/admin/category-list/${categoryId}`, {
          method: 'PATCH',
          body: formData
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              Swal.fire({
                title: 'Success',
                text: data.message || 'Category updated successfully',
                icon: 'success',
                confirmButtonText: 'OK'
              }).then(() => {
                location.reload(); // Reload the page after user clicks OK
              });
            } else {
              Swal.fire({
                title: 'Error',
                text: 'Error updating category: ' + (data.message || 'Unknown error'),
                icon: 'error',
                confirmButtonText: 'OK'
              });
            }
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire({
              title: 'Error',
              text: 'Error updating category: ' + error.message,
              icon: 'error',
              confirmButtonText: 'OK'
            });
          });
      }

      function showModalImagePreview(event) {
        const input = event.target;
        const file = input.files[0];

        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            const previewImage = document.getElementById('modalCategoryImage');
            previewImage.src = e.target.result;
            previewImage.style.display = 'block'; // Show the image
          };
          reader.readAsDataURL(file);
        }
      }

      function triggerInputClick(inputId) {
        document.getElementById(inputId).click();
      }
    </script>



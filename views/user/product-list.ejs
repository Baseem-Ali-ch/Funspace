              <div class="products mb-3">
                <div class="row justify-content-center" id="product-list">
                  <% products.forEach(product=> { %>
                    <div class="col-6 col-md-4 col-lg-4 product"
                      data-category-id="<%= product.category ? product.category._id : '' %>">
                      <div class="product product-7 text-center">
                        <figure class="product-media">
                          <span class="product-label label-new" style="background-color: rgba(223, 223, 223, 0.925);">
                            <% if (product.stock> 10) { %>
                              <p style="color: #50C878;">In stock</p>
                              <% } else if (product.stock> 0 && product.stock <= 10) { %>
                                  <p style="color: #dbba00;">Few left</p>
                                  <% } else { %>
                                    <p style="color: #DC143C;">Out of stock</p>
                                    <% } %>
                          </span>
                          <a href="/product/<%= product._id %>">
                            <img src="<%= product.imageUrl_1 %>" alt="Product image" class="product-image" />
                          </a>
                          <div class="product-action-vertical">
                            <a href="#" class="btn-product-icon btn-wishlist btn-expandable"
                              onclick="addToWishlist('<%= product._id %>',1); return false;">
                              <span>Add to Wishlist</span>
                            </a>
                          </div>
                          <div class="product-action">
                            <% if(product.status==='unavailable' || product.stock===0) { %>
                              <a href="#" class="btn-product btn-cart" style="pointer-events: none;">
                                <span>Sold out</span>
                              </a>
                              <% } else { %>
                                <a href="#" class="btn-product btn-cart" id="btn-cart-<%= product._id %>"
                                  onclick="addToCart('<%= product._id %>')">
                                  <span>Add to cart</span>
                                </a>
                                <% } %>
                          </div>
                        </figure>
                        <div class="product-body">
                          <div class="product-cat">
                            <% if(product.category) { %>
                              <a href="#">
                                <%= product.category.title %>
                              </a>
                              <% } else { %>
                                <a href="#">No Category</a>
                                <% } %>
                          </div>
                          <h3 class="product-title">
                            <a href="product.html">
                              <%= product.name %>
                            </a>
                          </h3>
                          <% if(product.offer) { %>
                            <div class="row">
                              <!-- Discounted price after applying the offer -->
                              <div class="product-price mx-3">
                                ₹<%= (product.price - (product.price * (product.offer.discount / 100))).toFixed(2) %>
                              </div>

                              <!-- Original price with strikethrough -->
                              <div class="product-price mx-3" style="font-size: 13px;">
                                <del>₹<%= product.price %></del>
                              </div>

                              <!-- Discount percentage -->
                              <% const discountPercentage=Math.round(product.offer.discount); %>
                                <div class="product-price" style="font-size: 16px;">
                                  <%= discountPercentage %>% off
                                </div>
                            </div>
                            <% } else { %>
                              <!-- If no offer, display the original price -->
                              <div class="product-price">
                                ₹<%= product.price %>
                              </div>
                              <% } %>
                                <div class="ratings-container">
                                  <div class="ratings">
                                    <div class="ratings-val" style="width: 20%"></div>
                                  </div>
                                  <span class="ratings-text">( 2 Reviews )</span>
                                </div>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                </div>
              </div>

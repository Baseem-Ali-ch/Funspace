    <script>

        document.addEventListener('DOMContentLoaded', () => {
            const popup = document.getElementById('popup');
            const closeButton = document.querySelector('.close');
            const confirmRemove = document.getElementById('confirmRemove');
            const cancelRemove = document.getElementById('cancelRemove');
            let currentProductId = null;
            let currentButtonElement = null;

            document.querySelectorAll('.btn-remove').forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault();
                    currentProductId = this.getAttribute('data-product-id');
                    currentButtonElement = this;
                    popup.style.display = 'flex';
                });
            });

            closeButton.addEventListener('click', () => {
                popup.style.display = 'none';
            });

            cancelRemove.addEventListener('click', () => {
                popup.style.display = 'none';
            });

            confirmRemove.addEventListener('click', () => {
                if (currentProductId) {
                    removeFromCart(currentProductId, currentButtonElement);
                    popup.style.display = 'none';
                }
            });

            window.addEventListener('click', (event) => {
                if (event.target === popup) {
                    popup.style.display = 'none';
                }
            });
        });

        function removeFromCart(productId, buttonElement) {
            console.log('Remove button clicked! Product ID:', productId); // Debugging line

            fetch(`/cart/${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
                .then(response => {
                    console.log('Response status:', response.status); // Log status
                    return response.json();
                })
                .then(data => {
                    console.log('Data received:', data); // Debugging line
                    if (data.message) {
                        showAlert(data.message, data.error ? 'error' : 'success');
                        if (!data.error) {
                            // Remove the item from the DOM
                            const tableRow = buttonElement.closest('tr');
                            if (tableRow) {
                                tableRow.remove();

                            }
                        }
                    } else {
                        console.error('No message received in response');
                        showAlert('Failed to remove item from cart', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error removing from cart:', error);
                    showAlert('Error removing item from cart', 'error');
                });
        }

        function showAlert(message, type) {
            const alertMessage = document.getElementById('alertMessage');
            alertMessage.textContent = message;
            alertMessage.className = 'alert-message'; // Reset classes
            if (type === 'error') {
                alertMessage.classList.add('alert-error');
            } else if (type === 'success') {
                alertMessage.classList.add('alert-success');
            }
            alertMessage.style.display = 'block';

            // Append the alert message to the bottom of the table
            const cartTable = document.getElementById('cartTable');
            cartTable.insertAdjacentElement('afterend', alertMessage);

            setTimeout(() => {
                window.location.reload()
                alertMessage.style.display = 'none';
            }, 1000); // Hide after 3 seconds
        }


        document.addEventListener('DOMContentLoaded', function () {
            const quantityInputs = document.querySelectorAll('.quantity-input')

            quantityInputs.forEach(input => {
                input.addEventListener('change', function () {
                    const productId = this.dataset.productId;
                    const newQuantity = parseInt(this.value);
                    const totalStock = parseInt(this.dataset.totalStock);

                    if (newQuantity < 1) {
                        this.value = 1;
                        return;
                    }
                    if (newQuantity > totalStock) {
                        this.value = totalStock;
                        return;
                    }
                    updateCartItemQty(productId, newQuantity)
                })
            })
        })

        function updateCartItemQty(productId, newQuantity) {
            fetch(`/cart/${productId}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ quantity: newQuantity })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Quantity updated successfully');
                        const input = document.querySelector(`[data-product-id="${productId}"]`);
                        if (input) {
                            input.max = data.totalStock;
                            input.dataset.totalStock = data.totalStock;
                        }
                        window.location.reload()
                    } else {
                        console.log('Error updating quantity', data.message);
                    }
                })
                .catch(error => {
                    console.log('Error', error);
                })
        }


    </script>



    <script>
        function searchCart() {
            // Get the search input and filter value
            const input = document.getElementById('search-input');
            const filter = input.value.toLowerCase();

            // Get the table body and rows
            const tableBody = document.querySelector('.table-cart tbody');
            const rows = tableBody.getElementsByTagName('tr');

            // Loop through rows to filter based on search query
            for (let i = 0; i < rows.length; i++) {
                const productTitle = rows[i].querySelector('.product-title a') ? rows[i].querySelector('.product-title a').textContent.toLowerCase() : '';

                // Show or hide rows based on the search query
                if (productTitle.includes(filter)) {
                    rows[i].style.display = '';
                } else {
                    rows[i].style.display = 'none';
                }
            }
        }
    </script>


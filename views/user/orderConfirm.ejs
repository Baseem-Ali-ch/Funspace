        <div class="">
            <div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Order<span>Summary</span></h1>
                </div><!-- End .container -->
            </div>
            <div class="order-summary order-summary-container">
                <div class="order-details">
                    <div class="order-info">
                        <h4 class="mb-3">Order Details</h4>

                        <p><strong>Order ID:</strong>
                            <%= order.orderId %>
                        </p>
                        <p><strong>Total Amount:</strong> ₹ <%= order.totalPrice %>
                        </p>
                        <p><strong>Ordered Date:</strong>
                            <%= order.deliveryDate ? formatDate(new Date(order.deliveryDate)) : 'N/A' %> %>.
                        </p>
                    </div>
                    <div class="address-details">
                        <h4>Address Details</h4>
                        <p><strong>Ship to:</strong>
                            <%= order.address.name %>
                        </p>
                        <p><strong>Delivery Address</strong><br>
                            <%= order.address.street %><br>
                                <%= order.address.town %>, <%= order.address.city %> <br>
                                        <%= order.address.state %>, <%= order.address.postcode %><br>
                                                <%= order.address.phone %>
                        </p>
                    </div>
                </div>
                <h3 class="mt-4 mb-3">Products</h3>
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>Product </th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let subtotal=0; %>
                            <% order.items.forEach(item=> { %>
                                <% const product=item.productId; %>
                                    <% const itemTotal=item.product.price * item.quantity; %>
                                        <% subtotal +=itemTotal; %>


                                            <tr>
                                                <td><a href="/product/<%= item.product._id %>"><img style="width: 7em;"
                                                            src="<%= item.product.imageUrl_1 %>"
                                                            alt="<%= item.product.name %>"></a></td>
                                                <td>
                                                    <%= item.product.name %> <br>


                                                </td>
                                                <td>
                                                    <%= item.quantity %>
                                                </td>
                                                <td>₹<%= item.product.price.toFixed(2) %>
                                                </td>
                                                <td>₹<%= itemTotal.toFixed(2) %>
                                                </td>
                                            </tr>
                                            <% }); %>
                    </tbody>
                </table>
                <div class="order-summary-footer">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <h6>Subtotal: <span>₹<%= subtotal.toFixed(2) %></span></h6>

                            <h4 class="mt-4">Grand Total: <span>₹<%= subtotal.toFixed(2) %></span></h4>
                        </div>
                    </div>
                </div>


                <div class="text-center mt-4">
                    <a href="/product-list" class="btn btn-md mr-2">Continue Shopping</a>
                    <a href="/download-invoice/<%= order.orderId %>" class="btn btn-md">Download
                        Invoice</a>
                </div>
            </div>

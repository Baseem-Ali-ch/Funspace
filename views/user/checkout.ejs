                                            <% addresses.forEach(addr=> { %>

                                                <div class="address-item">
                                                    <input type="radio" name="address" value="<%= addr._id %>"
                                                        id="address_<%= addr._id %>">
                                                    <p>
                                                        <strong>
                                                            <%= addr.fullName %>
                                                        </strong> <br>
                                                        <%= addr.phone %> <br>
                                                            <%= addr.streetAddress %>, <%= addr.apartment %><br>
                                                                    <%= addr.town %>, <%= addr.city %>, <%= addr.state

                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let total=0 %>
                                                <% cartItems.forEach(item=> { %>
                                                    <tr>
                                                        <td>
                                                            <a href="/product/<%= item.productId._id %>">
                                                                <%= item.productId.name %>
                                                            </a>
                                                        </td>
                                                        <td>
                                                            ₹<%= (item.productId.finalPrice * item.quantity).toFixed(2)
                                                                %>
                                                                <% total +=item.productId.finalPrice * item.quantity %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <tr class="summary-subtotal" id="subtotalAmount">
                                                            <td>Subtotal</td>
                                                            <td>₹<%= total.toFixed(2) %>
                                                            </td>
                                                        </tr><!-- End .summary-subtotal -->
                                                        <tr>
                                                            <td>Shipping:</td>
                                                            <td>Free shipping</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Coupon Amount:</td>
                                                            <td id="couponStatus"></td>
                                                        </tr>
                                                        <tr class="summary-total"
                                                            style="font-weight: 400; font-size: 1.6rem; color: #c96; border-bottom: none;">
                                                            <td>Total:</td>
                                                            <td id="totalAmount">₹<%= total.toFixed(2) %>
                                                            </td>
                                                        </tr><!-- End .summary-total -->
                                        </tbody>

